<section class="section">
  <header>
    <h3>Tag Cloud</h3>
  </header>
  <header>
    <p class="tags">
      {% for tag, weight in tags %}
      <span class="weight-{{ weight }}">{{ tag }}</span>
      {% else %}
      <p>There are no tags</p>
      {% endfor %}
    </p>
  </header>
</section>

<section class="section">
  <header>
    <h3>Latest Comments</h3>
  </header>
  {% for comment in latestComments %}
  <article class="comment">
    <header>
      <p class="small"><span class="highlight">{{ comment.user }}</span> commented on
      <a href="{{ path('blog_show_by_id', { 'id': comment.blog.id }) }}#comment-{{ comment.id }}">
        {{ comment.blog.title }}
      </a>
      [<em><time datetime="{{ comment.created|date('c') }}">{{ comment.created|date('Y-m-d h:iA') }}</time></em>]
      </p>
    </header>
    <p>{{ comment.comment }}</p>
  </article>
  {% else %}
  <p>There are no recent comments</p>
  {% endfor %}
</section>