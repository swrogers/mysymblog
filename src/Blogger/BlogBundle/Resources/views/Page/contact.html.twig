{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<header>
  <h1>Contact the author</h1>
</header>

<p>Want to contact us?</p>

{% for flashMessage in app.session.flashbag.get('blogger-notice') %}
<div class="blogger-notice">
  {{ flashMessage }}
</div>
{% endfor %}

<form method="post" action="{{ path('page_contact') }}" {{ form_enctype(form) }} class="blogger">
  {{ form_errors(form) }}

  {{ form_row(form.name) }}
  {{ form_row(form.email) }}
  {{ form_row(form.subject) }}
  {{ form_row(form.body) }}

  {{ form_rest(form) }}

  <input type="submit" value="Submit" />
</form>
{% endblock %}